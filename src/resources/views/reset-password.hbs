<body>
        <div class="login-container d-flex align-items-center justify-content-center">
            <form action="/forget/reset-password" method="post" class ="login-form text-center">
                <h2>RESET PASSWORD</h2>

                <input class ="form-control" type="password" name="password" required placeholder="Enter your new password">    
                <p> {{message}}</p>
                <input class ="form-control" type ="hidden" name="user_id" value = "{{ user_id }}">
                <button class ="btn btn-primary btn-block"type="submit" value = "Reset Password">Reset Password</button>
            </form>
        </div>
</body>
</html>     